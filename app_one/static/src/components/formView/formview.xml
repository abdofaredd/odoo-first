<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="app_one.FormView">

    <div class="p-3">

    <div class="o_field_widget mb-3">
        <label for="" class="o_form_label">Name</label> 
        <input class="o_input form-control" t-model="state.name" placeholder="Enter Propert Name" />
    </div>
    <div class="mb-3">
        <label for="" class="o_form_label">Postcode</label> 
        <input class="o_input form-control" t-model="state.postcode" placeholder="Enter Propert Postcode" />
    </div>
    <div class="mb-3">
        <label for="" class="o_form_label">Date Availability</label> 
        <input class="o_input form-control" t-model="state.date_availability" type="date" placeholder="Enter Propert Date Availability" />
    </div>
    <div class="footer">

        <button class="btn btn-primary me-2" t-on-click="this.createRecord">Save</button>
        <button class="btn btn-secondary me-2" t-on-click="this.cancel">Cancel</button>

    </div>

    
</div>
    </t>
</templates>
