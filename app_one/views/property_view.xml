<record id="property_form_view" model="ir.ui.view">
    <field name="name">property form</field>
    <field name="model">property</field>
    <field name="arch" type='xml'>
    <form>
    <sheet>

        <div name='button_box' class='oe_button_box '>
          <button name="action_open_related_owner" type="object"  icon="fa-user" string='Owner' invisible="not owner_id"/>

        </div>


    <widget name='web_ribbon' title='Archived' bg_color='text-bg-danger' invisible='active'/>
    <widget name='web_ribbon' title='Sold' bg_color='text-bg-success' invisible="status != 'sold' " />
        <header>
        <button name="action" type="object" class="btn-primary" string="ACTION"/>
        <button name="action_draft" type="object" class="btn-primary" string="Set To Draft" invisible="status in ('draft','closed')"/>
        <button name="action_pending" type="object" class="btn-primary" string=" Pending"
        invisible="not status in ('draft','sold')"/>
        <button name="action_sold" type="object" class="btn-primary" string="Sold"
        invisible="not status in ('draft','pending')"/>
        <field name="status" widget="statusbar" options="{'clickable':1}"/><!-- statusbar_visible="draft,sold,pending"  -->
        </header>
                <div class='oe_title'>
                    <lable for='ref'/>
                    <h1>
                            <field name="ref"/>
                    </h1>
                    <lable for='name' />
                    <h3 >
                            <field name="name" readonly="status=='closed'"/>
                    </h3>
                </div>
        <group>
            <group string='General info'>
                        <field name="create_time" readonly="1"   />
                        <field name="next_time" />
                        <field name="date_availability" readonly="status=='closed'" />
                        <field name="expected_selling_date" readonly="status=='closed'"/>
                        <field name="is_late"  invisible="1" readonly="status=='closed'"/>
                        <field name="expected_price" readonly="status=='closed'" />
                        <field name="selling_price" readonly="status=='closed'"/>
                        <field name="diff" readonly="status=='closed'"/>
                        <field name="garden" readonly="status=='closed'"/>
                        <field name="living_area" readonly="status=='closed'"/>
                        <field name="facades" readonly="status=='closed'"/>
                        </group>
                        <group string='Additional info' >
                        <field name="owner_id" readonly="status=='closed'"/>
                        <field name="owner_phone" readonly="status=='closed'"/>
                        <field name="owner_adress" readonly="status=='closed'"/>
                        <field name="postcode" readonly="status=='closed'"/>

                        <field name="status"/>
                        <field name="bedrooms" optional='1' readonly="status=='closed'"/>
                        <field name="garden_area" optional='1' readonly="status=='closed'"/>
                        <field name="garage" readonly="status=='closed'"/>
                        <field name="garden_orientation" readonly="status=='closed'"/>
                        <field name="tag_ids" widget="many2many_tags" readonly="status=='closed'"/>
                        <field name="active"/>
                        </group>
            <group>
                <field name="description"/>
            </group>

            <notebook>
                <page string="Bedrooms" >
                <field name="line_ids" >
                    <tree editable="bottom">
                        <field name="description"/>
                        <field name="area"/>
                    </tree>
                </field>
                </page>
            </notebook>


</group>
    </sheet>
        <div class='oe_chatter'>
                <field name="message_follower_ids" />
                <field name="activity_ids" />
                <field name="message_ids" />
        </div>
    </form>
    </field>

</record>
<record id="property_action" model="ir.actions.act_window">
    <field name="name">property action</field>
    <field name="res_model">property</field>
</record>
<record id="property_action_closed" model="ir.actions.server">
    <field name="name">Closed</field>
    <field name="model_id" ref='model_property'/>
    <field name="binding_model_id" ref='model_property'/>
    <field name="state">code</field>
    <field name="code">
        action=records.action_closed()
    </field>
</record>
<record id="property_change_state_server_action" model="ir.actions.server">
    <field name="name">Change State</field>
    <field name="model_id" ref='model_property'/>
    <field name="binding_model_id" ref='model_property'/>
    <field name="state">code</field>
    <field name="code">
        action=records.action_open_change_state_wizard()
    </field>
</record>

<record id="check_selling_date_cron" model="ir.cron">
    <field name="name"> property: Check Selling Date</field>
    <field name="model_id" ref="model_property"/>
    <field name="state">code</field>
    <field name="code">model.check_expected_selling_date()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">days</field>
    <field name="numbercall">-1</field>
    <field name="active">True</field>
</record>

    <menuitem
        id="property_menu_item"
        name="Property"
        parent='properties_menu'
        action='property_action'
        />

</odoo>
